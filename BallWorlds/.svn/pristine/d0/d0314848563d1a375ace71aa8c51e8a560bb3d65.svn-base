package ballworlds;

import java.awt.Color;
import java.awt.geom.Point2D;
import java.util.Random;

public class Pulsar extends Ball {

	private BallEnvironment world;
	private final int size = 20;
	private Color color;

	public Pulsar(BallEnvironment world) {
		super(world);
		this.world = world;
		this.color = new Color(0, 0, 0);
		Random r = new Random();
		double x = r.nextDouble() * world.getSize().getWidth();
		double y = r.nextDouble() * world.getSize().getHeight();
		this.setCenterPoint(new Point2D.Double(x, y));
	}

	@Override
	public Color getColor() {
		return this.color;
	}

	@Override
	public void updatePosition() {
	}

	@Override
	public void updateSize() {
	}

	@Override
	public void updateColor() {
		if (this.color.getBlue() == 0) {
			for (int i = 0; i < 256; i++) {
				this.color = new Color(i, i, i);
			}
		} 
		if (this.color.getBlue() == 255) {
			for (int i = 0; i < 256; i++) {
				this.color = new Color(255-i, 255-i, 255-i);
			}
		}
	}

	@Override
	public double getDiameter() {
		return this.size;
	}

}
